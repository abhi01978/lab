<%- include("partials/navbar") %>
<div class="max-w-sm mx-auto mt-12 bg-white p-6 rounded shadow">
  <h2 class="text-2xl font-bold mb-4 text-center">Admin Login</h2>
  <% if (error) { %>
    <p class="text-red-500 mb-4 text-sm"><%= error %></p>
  <% } %>
  <form method="POST">
    <input name="username" placeholder="Username" required class="mb-4 w-full px-3 py-2 border rounded">
    <input name="password" type="password" placeholder="Password" required class="mb-4 w-full px-3 py-2 border rounded">
    <button class="bg-green-600 text-white w-full py-2 rounded hover:bg-green-700">Login</button>
  </form>
</div>
